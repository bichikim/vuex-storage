{
  "compilerOptions": {
    "strict": false,
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",

    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "compileOnSave": false
}
